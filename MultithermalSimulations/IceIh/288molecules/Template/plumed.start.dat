# vim:ft=plumed

vol: VOLUME

energy: ENERGY

# Construct bias potential with OPES

OPES_MULTITHERMAL_MULTIBARIC ...
  LABEL=opes
  ARG=energy,vol
  PACE=500
  TEMP=200
  MIN_TEMP=50
  MAX_TEMP=350
  STEPS_TEMP=31
  PRESSURE=0.06022140857
  MAX_PRESSURE=0.06022140857
  MIN_PRESSURE=0.06022140857
  WALKERS_MPI
... OPES_MULTITHERMAL_MULTIBARIC

# Avoid melting

Q6 SPECIES=1-864:3 SWITCH={CUBIC D_0=0.3 D_MAX=0.35} VMEAN LABEL=q6

PRINT STRIDE=500  ARG=* FILE=COLVAR
